@{
    ViewData["Title"] = "Home Page";
}

<!-- Video de fondo -->
<video autoplay loop muted playsinline id="bg-video">
    <source src="~/videos/Video.mp4" type="video/mp4">
    Tu navegador no soporta la etiqueta de video.
</video>


<!-- CSS para el video de fondo y contenido -->
<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }

    #bg-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    .content {
        position: relative;
        z-index: 1;
        color: white;
        text-align: center;
        top: 50%;
        transform: translateY(-50%);
    }
</style>
