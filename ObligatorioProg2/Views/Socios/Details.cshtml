@model ObligatorioProg3.Models.Socio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Socio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoSocio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoSocio.TipoNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

<div>
    <h4>Rutinas Asignadas</h4>
    <hr />
    <ul>
        @foreach (var rutinaSocio in Model.SocioRutinas)
        {
            <li><b>Rutina: </b>@rutinaSocio.Rutina.Descripcion - <b>Calificación Otorgada: </b> @rutinaSocio.Calificacion</li>
           
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
