@model ObligatorioProg3.Models.Rutina

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rutina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoRutinaId" class="control-label">Tipo de Rutina</label>
                <select asp-for="TipoRutinaId" class="form-control" asp-items="ViewBag.TipoRutinaId"></select>
                <span asp-validation-for="TipoRutinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <h4>Ejercicios Asignados</h4>
    <div class="card-deck">
        @foreach (var rutinaEjercicio in Model.RutinaEjercicios)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@rutinaEjercicio.Ejercicio.Descripcion</h5>
                    <form asp-action="DesasignarEjercicio" method="post" class="mt-2">
                        <input type="hidden" name="rutinaId" value="@Model.Id" />
                        <input type="hidden" name="ejercicioId" value="@rutinaEjercicio.EjercicioId" />
                        <button type="submit" class="btn btn-danger">Desasignar Ejercicio</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <form asp-action="AsignarEjercicio">
        <input type="hidden" name="rutinaId" value="@Model.Id" />
        <div class="form-group">
            <label for="ejercicioId" class="control-label">Asignar Ejercicio</label>
            <select id="ejercicioId" name="ejercicioId" class="form-control" asp-items="ViewBag.Ejercicios"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Asignar Ejercicio" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ejercicioId').select2({
                placeholder: "Seleccione un ejercicio",
                allowClear: true
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
