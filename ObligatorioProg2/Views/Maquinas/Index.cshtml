@model IEnumerable<ObligatorioProg3.Models.Maquina>

@{
    ViewData["Title"] = "Gestión de Maquinas";
}

<h1>Gestión de Máquinas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nueva máquina</a>
    <a asp-area="" asp-controller="TipoMaquinas" asp-action="Index" class="btn btn-primary">Tipos de máquinas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VidaUtil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMaquina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Local.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VidaUtil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMaquina.MaquinaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
